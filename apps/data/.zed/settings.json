{
  "languages": {
    "Python": {
      "language_servers": ["ruff", "ty"],
      "format_on_save": "on",
      "formatter": "language_server",
    },
  },
  "lsp": {
    "ruff": {
      "binary": {
        "path": "uv",
        "arguments": ["run", "--project", "apps/data", "ruff", "server"],
      },
    },
    "ty": {
      "binary": {
        "path": "uv",
        "arguments": ["run", "--project", "apps/data", "ty", "server"],
      },
    },
  },
}
